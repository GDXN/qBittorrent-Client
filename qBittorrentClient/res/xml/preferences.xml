<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory
        android:key="Account"
        android:title="Account" >
        <ListPreference
            android:defaultValue="1"
            android:entries="@array/qBittorrentServers"
            android:entryValues="@array/qBittorrentServersValues"
            android:key="currentServer"
            android:summary="qBitttorent Server "
            android:title="Choose qBittorrent server" />

        <EditTextPreference
            android:defaultValue="192.168.1.1"
            android:dialogTitle="Hostname or IP?"
            android:key="hostname"
            android:summary="Hostname or IP"
            android:title="Connection Host" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="https"
            android:summary="Connect using https"
            android:title="Enable https" />

        <EditTextPreference
            android:defaultValue="8080"
            android:dialogTitle="Connection Port?"
            android:inputType="number"
            android:key="port"
            android:summary="Port (80,8080)"
            android:title="Connection Port " />
        <EditTextPreference
            android:defaultValue="admin"
            android:dialogTitle="Username?"
            android:key="username"
            android:summary="Provide a username"
            android:title="Username " />
        <EditTextPreference
            android:defaultValue="adminadmin"
            android:dialogTitle="Password?"
            android:inputType="textPassword"
            android:key="password"
            android:summary="Provide password"
            android:title="Password" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="old_version"
            android:summary="Use old qBittorrent version"
            android:title="qBittorrent 2.x" />
    </PreferenceCategory>

</PreferenceScreen>